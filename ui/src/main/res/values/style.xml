<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_shop_list_select_style">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_shop_list_select_text_style" >
        <item name="android:drawableRight">@drawable/select_top_arrow</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:textColor">@color/color_text_six</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>